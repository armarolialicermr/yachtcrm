@model YachtCRM.Domain.CustomerFeedback
@{
    ViewData["Title"] = "New Feedback";
}
<h3>Create Feedback</h3>
<form asp-action="Create" method="post" class="row g-3">
  @Html.AntiForgeryToken()
  <div class="col-md-6">
    <label class="form-label">Customer</label>
    <select asp-for="CustomerID" asp-items="ViewBag.Customers" class="form-select"></select>
  </div>
  <div class="col-md-6">
    <label class="form-label">Project</label>
    <select asp-for="ProjectID" asp-items="ViewBag.Projects" class="form-select">
      <option value="">(Optional)</option>
    </select>
  </div>
  <div class="col-md-3">
    <label class="form-label">Score (0â€“10)</label>
    <input asp-for="Score" type="number" min="0" max="10" class="form-control" />
  </div>
  <div class="col-md-5">
    <label class="form-label">Submitted On (UTC)</label>
    <input asp-for="SubmittedOn" type="datetime-local" class="form-control" />
  </div>
  <div class="col-12">
    <label class="form-label">Comments</label>
    <textarea asp-for="Comments" class="form-control" rows="4"></textarea>
  </div>
  <div class="col-12">
    <button class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
  </div>
</form>
