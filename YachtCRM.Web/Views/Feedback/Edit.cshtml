@model YachtCRM.Domain.CustomerFeedback
@{
    ViewData["Title"] = "Edit Feedback";
}
<h3>Edit Feedback #@Model.CustomerFeedbackID</h3>

<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CustomerFeedbackID" />

    <div class="col-md-6">
        <label class="form-label">Customer</label>
        <select asp-for="CustomerID" asp-items="ViewBag.Customers" class="form-select"></select>
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Project</label>
        <select asp-for="ProjectID" asp-items="ViewBag.Projects" class="form-select">
            <option value="">(Optional)</option>
        </select>
        <span asp-validation-for="ProjectID" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label class="form-label">Score (0â€“10)</label>
        <input asp-for="Score" type="number" min="0" max="10" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="col-md-5">
        <label class="form-label">Submitted On (UTC)</label>
        <input asp-for="SubmittedOn" type="datetime-local" class="form-control" />
        <span asp-validation-for="SubmittedOn" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Comments</label>
        <textarea asp-for="Comments" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Save</button>
        <a asp-action="Details" asp-route-id="@Model.CustomerFeedbackID" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
