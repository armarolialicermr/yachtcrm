@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - YachtCRM</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet" crossorigin="anonymous" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
  <header class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">YachtCRM</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" asp-controller="Projects" asp-action="Index">Projects</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index">Customers</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Interactions" asp-action="Index">Interactions</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="ServiceRequests" asp-action="Index">Service</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Feedback" asp-action="Index">Feedback</a></li>
        </ul>
      </div>
    </div>
  </header>

  <main class="container">
    @RenderBody()
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          crossorigin="anonymous"></script>

  <!-- Chart.js (UMD) necessario per tutti i grafici -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"
          crossorigin="anonymous"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>


