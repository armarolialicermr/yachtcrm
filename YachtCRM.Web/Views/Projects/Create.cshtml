@model YachtCRM.Domain.Project
@{
    ViewData["Title"] = "Create Project";
}
<h2>Create Project</h2>

<form asp-action="Create" method="post" class="card p-3 shadow-sm">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Customer</label>
            <select asp-for="CustomerID" class="form-select" asp-items="ViewBag.Customers"></select>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Yacht Model</label>
            <select asp-for="YachtModelID" class="form-select" asp-items="ViewBag.YachtModels"></select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="TotalPrice" class="form-label"></label>
            <input asp-for="TotalPrice" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="PlannedStart" class="form-label"></label>
            <input asp-for="PlannedStart" type="date" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="PlannedEnd" class="form-label"></label>
            <input asp-for="PlannedEnd" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <input asp-for="Status" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

