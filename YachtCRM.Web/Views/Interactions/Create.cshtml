@model YachtCRM.Domain.Interaction
@{
  ViewData["Title"] = "New Interaction";
}
<h2>New Interaction</h2>

<form asp-action="Create" method="post" class="card p-3 shadow-sm">
  <div class="row">
    <div class="col-md-6 mb-3">
      <label class="form-label">Customer</label>
      <select asp-for="CustomerID" class="form-select" asp-items="ViewBag.Customers"></select>
    </div>
    <div class="col-md-6 mb-3">
      <label class="form-label">Project (optional)</label>
      <select asp-for="ProjectID" class="form-select" asp-items="ViewBag.Projects">
        <option value="">-- none --</option>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mb-3">
      <label asp-for="Type" class="form-label"></label>
      <input asp-for="Type" class="form-control" placeholder="Meeting / Call / Email" />
    </div>
    <div class="col-md-4 mb-3">
      <label asp-for="OccurredOn" class="form-label"></label>
      <input asp-for="OccurredOn" type="datetime-local" class="form-control" value="@Model.OccurredOn.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <div class="col-md-4 mb-3">
      <label class="form-label">&nbsp;</label>
      <div><span class="text-muted small">Times saved as UTC.</span></div>
    </div>
  </div>
  <div class="mb-3">
    <label asp-for="Notes" class="form-label"></label>
    <textarea asp-for="Notes" class="form-control"></textarea>
  </div>
  <button class="btn btn-primary">Create</button>
  <a asp-action="Index" asp-route-customerId="@Model.CustomerID" class="btn btn-outline-secondary ms-2">Cancel</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
