@model IEnumerable<YachtCRM.Domain.Interaction>
@{
  ViewData["Title"] = "Interactions";
}
<h2 class="mb-3">Interactions</h2>

@if (TempData["Flash"] is string msg) { <div class="alert alert-success">@msg</div> }

<p>
  <a class="btn btn-success" asp-action="Create" asp-route-customerId="@ViewBag.CustomerId" asp-route-projectId="@ViewBag.ProjectId">+ New Interaction</a>
</p>

<table class="table table-striped align-middle">
  <thead>
    <tr>
      <th style="width:80px;">ID</th>
      <th>Customer</th>
      <th>Project</th>
      <th>Type</th>
      <th>When</th>
      <th>Notes</th>
      <th style="width:150px;"></th>
    </tr>
  </thead>
  <tbody>
  @foreach (var i in Model)
  {
    <tr>
      <td>@i.InteractionID</td>
      <td>@i.Customer?.Name</td>
      <td>@i.Project?.Name</td>
      <td>@i.Type</td>
      <td>@i.OccurredOn.ToLocalTime():g</td>
      <td class="text-truncate" style="max-width:380px;">@i.Notes</td>
      <td>
        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@i.InteractionID">Edit</a>
        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@i.InteractionID">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>
